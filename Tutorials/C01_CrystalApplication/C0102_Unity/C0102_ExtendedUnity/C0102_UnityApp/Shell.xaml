<Window x:Class="C0102_UnityApp.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:crystal="http://schemas.crystal.com"
				xmlns:shared="clr-namespace:C0102_Shared;assembly=C0102_Shared"
        Title="Shell" Height="450" Width="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<ContentControl Grid.Column="0" Grid.Row="0" crystal:RegionManager.RegionName="{x:Static shared:RegionNames.Region1}"/>
		<ContentControl Grid.Column="1" Grid.Row="0"  crystal:RegionManager.RegionName="{x:Static shared:RegionNames.Region2}"/>
		<ContentControl Grid.Column="0" Grid.Row="1"  crystal:RegionManager.RegionName="{x:Static shared:RegionNames.Region3}"/>
		<ContentControl Grid.Column="1" Grid.Row="1"  crystal:RegionManager.RegionName="{x:Static shared:RegionNames.Region4}"/>
	</Grid>
</Window>
