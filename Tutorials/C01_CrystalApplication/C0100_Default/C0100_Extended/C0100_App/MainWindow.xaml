<Window x:Class="C0100_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shared="clr-namespace:C0100Shared;assembly=C0100Shared"
        xmlns:crystal="http://schemas.crystal.com"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="1.5*"/>
		</Grid.RowDefinitions>
		<Grid Grid.Row="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<ContentControl Grid.Column="0" crystal:RegionManager.RegionName="{x:Static shared:RegionNames.Region1}" Margin="5"/>
			<ContentControl Grid.Column="1" crystal:RegionManager.RegionName="{x:Static shared:RegionNames.Region3}" Margin="5"/>
		</Grid>
		<ContentControl Grid.Row="1" crystal:RegionManager.RegionName="{x:Static shared:RegionNames.Region2}" Margin="5"/>
	</Grid>
</Window>
