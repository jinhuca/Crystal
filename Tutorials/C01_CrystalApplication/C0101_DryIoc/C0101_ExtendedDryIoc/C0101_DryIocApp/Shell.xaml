<Window x:Class="C0101_DryIocApp.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:crystal="http://schemas.crystal.com"
        xmlns:shared="clr-namespace:C0101_Shared;assembly=C0101_Shared"
        Title="Shell" Height="450" Width="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="1.5*"/>
		</Grid.RowDefinitions>
		<Grid Grid.Row="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<ContentControl Grid.Column="0" crystal:RegionManager.RegionName="{x:Static shared:RegionNames.Region1}"/>
			<ContentControl Grid.Column="1" crystal:RegionManager.RegionName="{x:Static shared:RegionNames.Region3}"/>
		</Grid>
		<ContentControl Grid.Row="1" crystal:RegionManager.RegionName="{x:Static shared:RegionNames.Region2}"/>
	</Grid>
</Window>
