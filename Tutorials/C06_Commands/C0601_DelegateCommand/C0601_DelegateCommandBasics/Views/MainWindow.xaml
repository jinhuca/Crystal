<Window x:Class="C0601_DelegateCommandBasics.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" ResizeMode="NoResize" Width="300" Height="400">
  <StackPanel>
    <TextBlock Grid.Row="0" Text="View A" FontSize="30" FontWeight="Black" HorizontalAlignment="Center" Margin="0, 20"/>
    <TextBlock Grid.Row="1" Text="{Binding Count}" Foreground="Blue" FontSize="35" FontWeight="Black" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 20"/>
    <Button Grid.Row="2" Content="Add" Command="{Binding AddCountCommand}" Width="100" Height="45" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 10"/>
    <CheckBox Grid.Row="3" Content="Enabled" IsChecked="{Binding IsCommandEnabled, Mode=TwoWay}" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 10"/>
  </StackPanel>
</Window>
