<Window x:Class="CrystalCoreDemo1.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:crystal="http://schemas.crystal.com"
        xmlns:shared="clr-namespace:Shared;assembly=Shared">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="35"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<ContentControl Grid.Row="0" Margin="5" crystal:RegionManager.RegionName="{x:Static shared:RegionNames.ToolbarRegionName}"/>
		<ContentControl Grid.Row="1" Margin="5" crystal:RegionManager.RegionName="{x:Static shared:RegionNames.ContentRegionName}"/>
	</Grid>
</Window>
