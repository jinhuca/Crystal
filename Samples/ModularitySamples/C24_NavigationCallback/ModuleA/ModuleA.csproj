<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Crystal.Core" Version="2.2.3.7" />
    <PackageReference Include="Crystal.Desktop" Version="2.2.3.7" />
    <PackageReference Include="Crystal.Themes" Version="2.2.4.4" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Views\ViewA.xaml.cs">
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="Views\ViewB.xaml.cs">
      <SubType>Code</SubType>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <Page Update="Views\ViewA.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
      <SubType>Designer</SubType>
    </Page>
    <Page Update="Views\ViewB.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
      <SubType>Designer</SubType>
    </Page>
  </ItemGroup>

</Project>
