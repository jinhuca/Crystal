<themes:CrystalWindow x:Class="LoadModuleFromDirectory.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:crystal="http://schemas.crystal.com"
                      xmlns:themes="http://schemas.crystal.com/themes"
                      xmlns:shared="clr-namespace:Shared;assembly=Shared"
                      Title="MainWindow" Height="450" Width="800">
  <DockPanel LastChildFill="True">
    <ContentControl DockPanel.Dock="Top" crystal:RegionManager.RegionName="{x:Static shared:RegionNames.ToolbarRegionName}"/>
    <ContentControl crystal:RegionManager.RegionName="{x:Static shared:RegionNames.ContentRegionName}"/>
  </DockPanel>
</themes:CrystalWindow>
