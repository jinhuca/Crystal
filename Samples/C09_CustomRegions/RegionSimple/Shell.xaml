<Window x:Class="RegionSimple.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:crystal="http://schemas.crystal.com"
				xmlns:shared="clr-namespace:SharedLibary;assembly=SharedLibary"
        Title="Shell">
	<DockPanel LastChildFill="True">
		<StackPanel Orientation="Horizontal" DockPanel.Dock="Top" crystal:RegionManager.RegionName="{x:Static shared:RegionNames.ToolbarRegionName}"/>
		<ContentControl crystal:RegionManager.RegionName="{x:Static shared:RegionNames.ContentRegionName}"/>
	</DockPanel>
</Window>
