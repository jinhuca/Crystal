<Window x:Class="LoadViaAppConfig.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:crystal="http://schemas.crystal.com"
        xmlns:shared="clr-namespace:Shared;assembly=Shared"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="30"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<ContentControl Grid.Row="0" crystal:RegionManager.RegionName="{x:Static shared:RegionNames.ToolbarRegionName}" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
		<ContentControl Grid.Row="1" crystal:RegionManager.RegionName="{x:Static shared:RegionNames.ContentRegionName}" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
	</Grid>
</Window>
