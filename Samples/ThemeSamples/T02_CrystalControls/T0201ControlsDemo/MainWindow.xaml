<crystalThemes:CrystalWindow x:Class="T0201ControlsDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:crystalThemes="http://schemas.crystal.com/themes"
        xmlns:local="clr-namespace:T0201ControlsDemo"
        mc:Ignorable="d" TitleCharacterCasing="Normal"
                         BorderBrush="{DynamicResource Crystal.Brushes.Accent}"
                             Icon="Resources/icon1.ico"
        Title="MainWindow" Height="450" Width="800">
  <crystalThemes:CrystalWindow.RightWindowCommands>
    <crystalThemes:WindowCommands>
      <Button>Settings</Button>
      <Button>Publish</Button>
    </crystalThemes:WindowCommands>
  </crystalThemes:CrystalWindow.RightWindowCommands>
  <crystalThemes:CrystalWindow.LeftWindowCommands>
    <crystalThemes:WindowCommands>
      <Button FontSize="20" FontFamily="Wingdings" Content="H"/>
      <Button FontSize="20" FontFamily="Wingdings" Content="J"/>
    </crystalThemes:WindowCommands>
  </crystalThemes:CrystalWindow.LeftWindowCommands>
  <Grid>

  </Grid>
</crystalThemes:CrystalWindow>
