<crystalThemes:CrystalWindow x:Class="T0101CrystalWindow.MainWindow"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:crystalThemes="http://schemas.crystal.com/themes"
                             Title="Crystal Window">
  <WrapPanel>
    <Button Content="Crystal" Height="40" Width="150" FontSize="18" Margin="5"/>
    <CheckBox Content="CheckBox" FontSize="20" Margin="5"/>
    <TextBlock Text="Hello Crystal Themes" Width="300" Height="40" Margin="5" FontSize="20" Foreground="DarkRed"/>
    <TextBox Width="200" Height="40" FontSize="20" Foreground="DarkBlue" Margin="5" />
    <ToggleButton Content="Toggle" Height="40" Width="150" FontSize="18" Margin="5"/>
    <Label Content="Label" Height="40" Width="150" FontSize="18" Foreground="DarkGreen"  Margin="5"/>
  </WrapPanel>
</crystalThemes:CrystalWindow>
