<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <Authors>Jin Hu</Authors>
    <PackageTags>Desktop</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Version>1.3.1.1</Version>
    <PackageProjectUrl>https://github.com/jinhuca/Crystal.Infrastructure</PackageProjectUrl>
    <PackageIcon>CrystalDesktop.png</PackageIcon>
    <PackageIconUrl />
    <RepositoryUrl>https://github.com/jinhuca/Crystal.Infrastructure</RepositoryUrl>
    <RepositoryType>Library</RepositoryType>
    <PackageLicenseFile>License.txt</PackageLicenseFile>
    <Description>Crystal library for building composite .NET applications and components.</Description>
    <PackageId>Crystal.Desktop</PackageId>
    <AssemblyVersion>2.0.1.1</AssemblyVersion>
    <FileVersion>2.0.1.1</FileVersion>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile></DocumentationFile>
    <OutputPath>bin\debug</OutputPath>
    <Optimize>false</Optimize>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <Optimize>false</Optimize>
    <OutputPath>bin\release</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Commands\**" />
    <Compile Remove="Properties\**" />
    <EmbeddedResource Remove="Commands\**" />
    <EmbeddedResource Remove="Properties\**" />
    <None Remove="Commands\**" />
    <None Remove="Properties\**" />
    <None Include="Resources\CrystalDesktop.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <Page Remove="Commands\**" />
    <Page Remove="Properties\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Xaml.Behaviors.Wpf" Version="1.1.37" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\Documentation\License.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Crystal.Core\Crystal.Core.csproj" />
  </ItemGroup>

</Project>
