<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:crystal="clr-namespace:Crystal.Themes.Controls">
  <Style x:Key="Crystal.Styles.CrystalWindow.Clean" TargetType="{x:Type crystal:CrystalWindow}">
    <Setter Property="NonActiveWindowTitleBrush" Value="{DynamicResource Crystal.Brushes.Transparent}"/>
    <Setter Property="TitleAlignment" Value="Center"/>
    <Setter Property="TitleForeground" Value="{DynamicResource Crystal.Brushes.ThemeForeground}"/>
    <Setter Property="WindowTitleBrush" Value="{DynamicResource Crystal.Brushes.Transparent}"/>
  </Style>
</ResourceDictionary>