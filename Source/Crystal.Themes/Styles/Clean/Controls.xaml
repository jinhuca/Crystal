<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mah="clr-namespace:Crystal.Themes.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Styles/Clean/GroupBox.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Styles/Clean/CrystalWindow.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Styles/Clean/WindowButtonCommands.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Styles/Clean/WindowCommands.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Styles/Clean/StatusBar.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style BasedOn="{StaticResource MahApps.Styles.GroupBox.Clean}" TargetType="{x:Type GroupBox}" />
    <Style BasedOn="{StaticResource MahApps.Styles.MetroWindow.Clean}" TargetType="{x:Type mah:CrystalWindow}" />
    <Style BasedOn="{StaticResource MahApps.Styles.WindowButtonCommands.Clean.Win10}" TargetType="{x:Type mah:WindowButtonCommands}" />
    <Style BasedOn="{StaticResource MahApps.Styles.WindowCommands.Clean}" TargetType="{x:Type mah:WindowCommands}" />
    <Style BasedOn="{StaticResource MahApps.Styles.StatusBar.Clean}" TargetType="{x:Type StatusBar}" />

</ResourceDictionary>