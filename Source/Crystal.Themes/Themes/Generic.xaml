                    xmlns:dialogs="clr-namespace:Crystal.Themes.Controls.Dialogs"
                    xmlns:mah="clr-namespace:Crystal.Themes.Controls"
                    xmlns:theming="clr-namespace:Crystal.Themes.Theming">

  <ResourceDictionary.MergedDictionaries>
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Styles/Fonts.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/Underline.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/Badged.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/DateTimePicker.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/DropDownButton.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/FlipView.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/Flyout.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/FlyoutsControl.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/FontIcon.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/PathIcon.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/MetroAnimatedSingleRowTabControl.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/MetroAnimatedTabControl.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/CrystalContentControl.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/CrystalHeader.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/MetroProgressBar.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/MetroTabControl.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/MetroTabItem.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/CrystalWindow.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/NumericUpDown.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/Pivot.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/ProgressRing.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/RangeSlider.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/RevealImage.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/SplitButton.xaml" />
