    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/HamburgerMenu.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/Tile.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/ToggleSwitch.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/TransitioningContentControl.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/WindowButtonCommands.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/WindowCommands.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/HotKeyBox.xaml" />
