    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/Dialogs/BaseMetroDialog.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/ColorPicker/ColorEyeDropper.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/ColorPicker/ColorCanvas.xaml" />
    <ResourceDictionary Source="pack://application:,,,/Crystal.Themes;component/Themes/ColorPicker/ColorPalette.xaml" />
