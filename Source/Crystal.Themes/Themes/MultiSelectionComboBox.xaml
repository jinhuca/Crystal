    <Style x:Key="Crystal.Styles.MulitselectionComboBoxSelectedItem.Removeable"
           BasedOn="{StaticResource Crystal.Styles.MulitselectionComboBoxSelectedItem}"
           TargetType="ListBoxItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Grid>
                        <Border Margin="{TemplateBinding Margin}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=(crystal:ControlsHelper.CornerRadius)}"
                                IsHitTestVisible="{TemplateBinding IsHitTestVisible}"
                                RenderOptions.ClearTypeHint="{TemplateBinding RenderOptions.ClearTypeHint}"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
